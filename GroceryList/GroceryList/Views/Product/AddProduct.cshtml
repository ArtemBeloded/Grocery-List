@model GroceryList.DAL.Models.Product


@using (Html.BeginForm("SaveNewProduct", "Product"))
{
    @Html.ValidationSummary()
    <form>
        <div class="form-group">
            <label for="inputname">Enter product name</label>
            <input type="text" class="form-control" id="inputname" name="Name" value="" placeholder="Product name">
        </div>
        <div class="form-group">
            <label for="quantityintup">Enter quantity</label>
            <input class="form-control" type="text" name="Quantity" id="quantityintup" placeholder="Quantity" />
        </div>
        <div class="form-group">
            <label for="EnumDropDownListFor">Enter unit</label>
            @Html.EnumDropDownListFor(Model => Model.unit, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="datechoosser">Choose a date</label>
            <input class="form-control" type="datetime-local" id="datechoosser" name="DateOfCreate">
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Create" />
        </div>
    </form>
}

<div>
    @Html.ActionLink("Come back", "ListOfProduct", "Product", new { @class = "btn btn-primary" })
</div>