@model GroceryList.DAL.Models.Product


@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    @Html.ValidationSummary()
    <form>
        <div class="form-group">
            <label for="idmodel">Identification number</label>
            <input type="text" class="form-control" id="idmodel" name="Id" value="@Model.Id" readonly="readonly" />
        </div>
        <div class="form-group">
            <label for="nameproduct">Product name</label>
            <input type="text" class="form-control" id="nameproduct" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="quantityproduct">Quantity</label>
            <input type="text" class="form-control" id="quantityproduct" name="Quantity" value="@Model.Quantity" />
        </div>
        <div class="form-group">
            <label for="unitsproduct">Unit</label>
            @Html.EnumDropDownListFor(Model => Model.unit, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="datecreation">Date of create</label>
            <input type="text" class="form-control" id="datecreation" name="DateOfCreate" value="@Model.DateOfCreate" readonly="readonly" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Update" new { onclick="return confirm('Confirm Change ?');" } />
        </div>
    </form>
}
<div>
    @Html.ActionLink("Come back", "ListOfProduct", "Product", new { @class = "btn btn-primary" })
</div>
